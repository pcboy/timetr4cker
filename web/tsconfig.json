{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["jest", "node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "pages/**.tsx",
    "stores/**.tsx",
    "layouts/**.tsx",
    "components/**.tsx",
    "config/**.tsx"
  ]
  
}
